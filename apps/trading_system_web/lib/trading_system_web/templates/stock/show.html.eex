<div class="columns">
  <div class="column is-8">
    <div>
      <strong style="font-size: 24px;">
        <%= @stock.cname %> 
        <%= @stock.market %>:<%= @stock.symbol %>
      </strong>
      <span><%= @stock.name %></span>
    </div>
  </div>
  <div class="column" style="padding-top: 20px;"> 
    <span id="stock-star-btn" class="is-pulled-right"></span>
    <span id="stock-backlist-btn" class="is-pulled-right" style="margin-right: 20px;"></span>
  </div>
</div>

<div class="columns">
  <div class="column is-9">
    <!-- React Component: StockChart  -->
    <div id="stock-chart"></div>
    <div id="slider"></div>
  </div>
  <div class="column is-3">
    <!-- React Component: StockRealtime  -->
    <div id="stock-realtime"></div>
  </div>
</div>

<div class="columns">
  <div class="column">
    <div id="stock-backtest"></div>
  </div>
</div>

<%= if @authenticated? do %>
<div class="columns">
  <div class="column">
    <%= render "position.html", assigns %>
  </div>
</div>
<% end %>
